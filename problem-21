 // problem 21 first and last occurence of x
#include <iostream>
using namespace std;
int main() {
    int arr[7] = {1,2,3,2,4,2,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int x = 2;
    
    for(int i = 0; i < n; i++){
        if(arr[i] == x){
            cout << "First index : " << i << endl;
            i = x+1;
            cout << "Last index : " << i << endl;
            return 0;
        }
    }

    return 0;
}
