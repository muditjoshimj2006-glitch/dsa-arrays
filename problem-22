 // problem 22 choose 3 element and find maximum sum
#include <iostream>
using namespace std;
int main() {
    int arr[7] = {1,2,3,2,4,2,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int sum = 0;
    
    for(int i = 0; i < n; i++){
        for(int j = i+1; j < n; j++){
            for(int k = j+1; k < n; k++){
                if(arr[i] + arr[j] + arr[k] > sum){
                    sum = arr[i] + arr[j] + arr[k];
                }
            }
        }
    }
    cout << "Sum : " << sum << endl;
    

    return 0;
}
