 //problem 18 triplet sum
#include <iostream>
using namespace std;

int main() {
    int arr[5] = {1,2,3,4,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int target = 9;
    
    for(int i = 0; i < n; i++){
        for(int j = i+1; j < n; j++){
            for(int k = j+1; k < n; k++){
                if(arr[i] + arr[j] + arr[k] == target){
                    cout << "Triplet sum found" << endl;
                    cout << arr[i] << " " << arr[j] << " " << arr[k];
                    return 0;
                }
            }
        }
    }

    return 0;
}
