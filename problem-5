// reverse 2 pair of group in an array [problem-5]
#include <iostream>
using namespace std;

int main() {
    int arr[6] = {1,2,3,4,5,6};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    for(int i = 0; i < n; i+=2){
        swap(arr[i], arr[i+1]);
    }
    
    for(int i = 0; i < n; i++){
        cout << arr[i] << " ";
    }
    return 0;
}
