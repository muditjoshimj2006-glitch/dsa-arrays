// find second largest element in an array [problem-3]
#include <iostream>
using namespace std;

int main() {
    int arr[5] = {1,2,3,4,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int largest = 0;
    int second_largest = n-1;
    
    for(int i = 0; i < n; i++){
        if(arr[i] > largest){
            second_largest = largest;
            largest = arr[i];
        }
    }
    
    cout << "Second largest element : " << second_largest << endl;

    return 0;
}
