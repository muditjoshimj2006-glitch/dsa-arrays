 // finding maximum and minimum element in an array [PROBLEM 2]
#include <iostream>
#include<climits>
using namespace std;

int main() {
    int arr[5] = {1,2,3,4,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int max = 0;
    int min = INT_MAX;
    
    for(int i = 0; i < n; i++){
        if(arr[i] > max){
            max = arr[i];
        }
        if(arr[i] < min){
            min = arr[i];
        }
        
    }
    cout << "MAXIMUM ELEMENT : " << max << endl;
    cout << "MINIMUM ELEMENT : " << min << endl;

    return 0;
}
