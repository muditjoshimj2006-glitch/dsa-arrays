 // maximum contigous series of 1 [problem 27]
#include <iostream>
using namespace std;

int main() {
    int arr[7] = {1,1,0,1,1,1,1};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    for(int i = 0; i < n; i++){
        int count = 0;
        for(int j = i+1; j < n; j++){
            if(arr[i] == arr[j]){
                count++;
            }
            else{
                count = 0;
            }
           
        }
         cout << count << " " << endl;
         return 0;
    }
    return 0;
}
