 // finding element in an array [PROBLEM 1]
#include <iostream>
using namespace std;

int main() {
    int arr[5] = {1,2,3,4,5};
    int n = sizeof(arr)/sizeof(arr[0]);
    int x = 3;
    
    for(int i = 0; i < n; i++){
        if(arr[i] == x){
            cout << "Element " << x << " found at index " << i << endl;
        }
    }

    return 0;
}
