 //house robber problem 31
#include <iostream>
using namespace std;

int main(){
    int arr[7] = {7,1,3,6,5,4,3};
    int n = sizeof(arr)/sizeof(arr[0]);
    int start = 0;
    int end = n-1;
    int loot = 0;
    
    while(start <= end){
        loot += arr[start];
        start += 2;
    }
    
    cout << "Total maximum loot : " << loot << endl;

    return 0;
}
